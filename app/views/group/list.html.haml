%p.title
  Groups

%table
  %tr
    %th
    %th{ :width => "542" }
      Name
    %th
    %th
  - @groups.each do |group|
    %tr{ :class => cycle('even', 'odd') }
      %td
        = image_tag('group.png')
      %td
        = h(group.name)
      - unless group.is_the_administrators_group?
        %td
          = link_to image_tag('edit.png'), { :action => 'rename', :id => group }, { :title => 'Rename this group' }
        %td
          = link_to image_tag('delete.png'), { :action => 'destroy', :id => group }, { :title => 'Delete this group', :confirm => 'Are you sure?' }
      - else
        %td
        %td

- content_for :actionlinks do
  = render :partial => "actionlinks"
